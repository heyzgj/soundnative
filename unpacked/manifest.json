{
  "manifest_version": 3,
  "name": "SoundNative",
  "description": "Helps non-native speakers write like native English speakers.",
  "version": "1.0",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png",
    "192": "icon192.png",
    "512": "icon512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.googletagmanager.com https://apis.google.com; object-src 'self'"
  
}
